<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorAccent">@color/accent</item>
	</style>

	<style name="BodyText">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/primary_text</item>
	</style>

	<style name="ContentText" parent="BodyText">
		<item name="android:textSize">@dimen/text_content</item>
	</style>

	<style name="SubheadingText" parent="BodyText">
		<item name="android:textSize">@dimen/text_header</item>
	</style>

	<style name="CaptionText">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/secondary_text</item>
		<item name="android:textSize">@dimen/text_status</item>
	</style>
</resources>
